<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
    
  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name.blank? ? '名無し' : message.name %></span>
      <span style="word-wrap:break-word;"><%= message.body %></span>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, :html => { :class => 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <label for="message_name" class="col-sm-1 control-label">名前:</label>
    <div class="col-sm-4">
      <%= f.text_field :name, :class => 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_body" class="col-sm-1 control-label">内容:</label>
    <div class="col-sm-11">
      <%= f.text_area :body, :class => 'form-control', :size => '100x3' %>
    </div>
  </div>
  <dic class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </dic>
<% end %>